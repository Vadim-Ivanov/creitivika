while(wins!=15):
    t = 0
    if t < 150:
        time.sleep(0.01)
        t += 1
        if keyboard.is_pressed('right') == True:
            p[len(p)-1][x] = " "
            x += 1
            p[len(p)-1][x] = "#"
            pol()
        if keyboard.is_pressed('left') == True:
            p[len(p)-1][x] = " "
            x -= 1
            p[len(p)-1][x] = "#"
            pol()
    move()
