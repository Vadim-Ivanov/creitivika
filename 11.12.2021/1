import keyboard, time, random

x_bon = []
y_bon = []
def move():
    x_bon.append(random.randint(1,24))
    y_bon.append(0)
    for i in range(len(x_bon)-1):
        p[y_bon[i]][x_bon[i]] = "+"
        y_bon[i] += 1
        if y_bon[i] > 8:
            del y_bon[i]
            del x_bon[i]
    
def pol():
    for i in range(len(p)):
        print(str(p[i]).replace( ',' , ' ' ))

