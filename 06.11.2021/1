for i in range(3):
    pr = False
    pr2 = False
    while (pr == False or pr == None) and (pr2 == False or pr2 == None):
        print(boat[1])
        x = int(input("столбец "))
        y = int(input("строка "))
        pr = prov()
        n = input("направление ")
        if n == "left" and x-2 > 1:
            x -= 1
        elif n == "right" and x < 10:
            x += 1
        elif n == "up" and y-2 > 1:
            y -= 1
        elif n == "down" and y < 10:
            y += 1
        pr2 = prov()
    p()
