def p():
    for i in my_pole_vr:
        for j in i:
            print(j,end=" ")
        print()
    print("\n")
    for i in pole:
        for j in i:
            print(j,end=" ")
        print()
def prov(x,y,n,d,px,py):
    if pole[y-1][x-1] != "#" and pole[y-1][x] != "#" and pole[y-1][x+1] != "#":
        if pole[y][x-1] != "#" and pole[y][x] != "#" and pole[y][x+1] != "#":
            if pole[y+1][x-1] != "#" and pole[y+1][x] != "#" and pole[y+1][x+1] != "#":
                l_x = []
                l_y = []
                for i in range(d):
                    if x > px:
                        l_x.append(x-i)
                        l_y.append(y)
                    if x < px:
                        l_x.append(x+i)
                        l_y.append(y)
                    if y > py:
                        l_x.append(x)
                        l_y.append(y-i)
                    if y < py:
                        l_x.append(x)
                        l_y.append(y+i)
                for i in range(len(l_x)):
                    pole[l_y[i]][l_x[i]] = "#"
                    #print("============================================================================================================")
                return True
    print("ошибка")
    return False
