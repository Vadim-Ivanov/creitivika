def prov():
    if pole[y-2][x-2] == "*" and pole[y-2][x-1] == "*" and pole[y-2][x] == "*":
        if pole[y-1][x-2] == "*" and pole[y-1][x-1] == "*" and pole[y-1][x] == "*":
            if pole[y][x-2] == "*" and pole[y][x-1] == "*" and pole[y][x] == "*":
                pole[y-1][x-1] = "#"
                print("============================================================================================================")
                return True
    else:
        print("ошибка")
        return False
