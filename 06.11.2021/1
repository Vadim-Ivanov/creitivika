for i in range(4):
    pr = False
    while pr == False or pr == None:
        print(boat[0])
        x = int(input("столбец "))
        y = int(input("строка "))
        pr = prov(x-1,y-1,"none",1,x,y)
    p()
    
for i in range(3):
    pr = False
    pr2 = False
    while (pr == False or pr == None) and (pr2 == False or pr2 == None):
        print(boat[1])
        x = int(input("столбец "))
        y = int(input("строка "))
        n = input("направление ")
        d = 2
        if n == "left" and x-2 >= 1:
            pr = prov(x-2,y-1,n,d,x,y-1)
        elif n == "right" and x < 10-(d-1):
            pr = prov(x-1,y-1,n,d,x,y-1)
        elif n == "up" and y-2 >= 1:
            pr = prov(x-1,y-2,n,d,x-1,y)
        elif n == "down" and y < 10-(d-1):
            pr = prov(x-1,y-1,n,d,x-1,y)
        
    p()
for i in range(2):
    pr = False
    while pr == False or pr == None:
        print(boat[2])
        x = int(input("столбец "))
        y = int(input("строка "))
        n = input("направление ")
        d = 3
        if n == "left" and x-d >= 1:
            pr = prov(x-d,y-1,n,d,x,y-1)
        elif n == "right" and x < 10-(d-1):
            pr = prov(x-(d-2),y-1,n,d,x,y-1)
        elif n == "up" and y-d >= 1:
            pr = prov(x-1,y-d,n,d,x-1,y)
        elif n == "down" and y < 10-(d-1):
            pr = prov(x-1,y-(d-2),n,d,x-1,y)
    p()
for i in range(1):
    pr = False
    while pr == False or pr == None:
        print(boat[3])
        x = int(input("столбец "))
        y = int(input("строка "))
        n = input("направление ")
        d = 4
        if n == "left" and x-d >= 1:
            pr = prov(x-d,y-1,n,d,x,y-1)
        elif n == "right" and x < 10-(d-1):
            pr = prov(x-(d-3),y-1,n,d,x,y-1)
        elif n == "up" and y-d >= 1:
            pr = prov(x-1,y-d,n,d,x-1,y)
        elif n == "down" and y < 10-(d-1):
            pr = prov(x-1,y-(d-3),n,d,x-1,y)
    p()
