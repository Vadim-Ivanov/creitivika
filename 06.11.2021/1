def prov(x,y,n,d,px,py):
    if pole[y-1][x-1] == "*" and pole[y-1][x] == "*" and pole[y-1][x+1] == "*":
        if pole[y][x-1] == "*" and pole[y][x] == "*" and pole[y][x+1] == "*":
            if pole[y+1][x-1] == "*" and pole[y+1][x] == "*" and pole[y+1][x+1] == "*":
                for i in range(d):
                    pole[y][x] = "#"
                print("============================================================================================================")
                return True
    print("ошибка")
    return False
