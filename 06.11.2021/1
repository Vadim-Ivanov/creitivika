for i in range(3):
    pr = False
    pr2 = False
    while (pr == False or pr == None) and (pr2 == False or pr2 == None):
        print(boat[1])
        x = int(input("столбец "))
        y = int(input("строка "))
        pr = prov(x-1,y-1)
        n = input("направление ")
        if n == "left" and x-2 > 1:
            pr2 = prov(x-2,y-1,n,2,x,y)
        elif n == "right" and x < 10:
            pr2 = prov(x,y-1,n,2,x,y)
        elif n == "up" and y-2 > 1:
            pr2 = prov(x-1,y-2,n,2,x,y)
        elif n == "down" and y < 10:
            pr2 = prov(x-1,y,n,2,x,y)
        
    p()
